{% trans_default_domain "MissionBundle" %}

{% extends 'MissionBundle:Mission:view_thread_seeker.html.twig' %}
{% block start %}
<html>
<body>
<h2>{{ mission.title }} </h2>
{% endif %}

<div class="well">
  <h4><br>{{ 'mission.view.resume'|trans }} :</h4>
    {{ mission.resume }}
  <h5>{{ 'mission.view.details'|trans }} :</h5>

    {% for oneProExp in mission.professionalExpertise %}
        {{ oneProExp.name|trans }},
    {% endfor %}
    {% for oneMissionKind in mission.missionKinds %}
        {{ oneMissionKind.name|trans }},
    {% endfor %}

  <div>
    {% if mission.address is not null %}
      <h4><br>{{ 'mission.view.address'|trans }} :</h4>

      {{ mission.address.street }},
      {% if mission.address.state is not null %}
          {{ mission.address.street2 }},<br>
      {% endif %}
      {{ mission.address.city }},{{ mission.address.zipcode }}
      <br>{{ mission.address.country }}
      {% if mission.address.state is not null %}
        ,{{ mission.address.state }}<br>
      {% endif %}

      {% if mission.address.label is not null %}
          {{ 'mission.view.label'|trans }} : {{ mission.address.state }}<br>
      {% endif %}
      {% if mission.address.name is not null %}
          {{ 'mission.view.name'|trans }}: {{ mission.address.name }}<br>
      {% endif %}
    {% endif %}
      {{ 'mission.view.country'|trans }}: {{ mission.address.country|countryName(app.request.locale) }}
  </div>



  <h4><br>{{ 'mission.view.budget'|trans }} :</h4>
    {{ mission.budget }} {{ 'mission.view.budget'|trans }}
  </p>
  <p>
      {{ 'mission.view.applicationEnding'|trans({'%date%': mission.applicationEnding|date('m/d/Y')}) }}<br>
      {{ 'mission.view.period'|trans({'%start%': mission.missionBeginning|date('m/d/Y'),
          '%end%': mission.missionEnding|date('d/m/Y') }) }}<br>
  </p>

    {% if mission.languages is not null %}
      <h4><br>{{ 'mission.view.languages'|trans }}:</h4>
      <ul>
          {% for language in mission.languages %}
            <li>{{ language.name|trans({}, 'tools') }}</li>
          {% endfor %}
      </ul>
    {% endif %}
  <p>
      {% if mission.confidentiality == 1 %}
          {{ 'mission.view.confidential'|trans }}
      {% endif %}
      {% if mission.telecommuting == 1 %}
          {{ 'mission.view.telecommuting'|trans }}
      {% endif %}
  </p>

  <p>
      {% endblock %}
      {% block chatbox %}
      {% endblock %}
      {% block end %}
  </p>
</div>
</body>
</html>
{% endblock %}
