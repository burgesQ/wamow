{% extends "UserBundle::layout.html.twig" %}

{% form_theme form _self %}
{%- block button_widget -%}
    {%- if label is empty -%}
        {%- if label_format is not empty -%}
            {% set label = label_format|replace({
            '%name%': name,
            '%id%': id,
            }) %}
        {%- else -%}
            {% set label = name|humanize %}
        {%- endif -%}
    {%- endif -%}
    <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>{{ translation_domain is same as(false) ? label|raw : label|trans({}, translation_domain)|raw }}</button>
{%- endblock button_widget -%}

{% trans_default_domain "tools" %}
{% block body %}
    {{ form_start(form, {'attr': {'class': 'wmw-onboard col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 col-xl-4 col-xl-offset-4'}}) }}
        {{ form_errors(form.missionKind) }}
        <div class="wmw-onboard-body">
            <h1>
                {{ 'registration.advisor.two.title' | trans }}
                <small>{{ 'registration.advisor.two.subtitle' | trans }}</small>
            </h1>
            <div class="wmw-onboard-switches">
                {% for key, missionKind in form.missionKind %}
                    <div class="wmw-onboard-switches-el">
                        <label for="{{ missionKind.vars.id }}">{{ form_label(missionKind) }}</label>
                        <div class="wmw-switchfield">
                            {{ form_widget(missionKind, {'attr' : {'class': 'requiredgroup:wmw-ob-missions vv-ggparent'}}) }}
                            <label for="{{ missionKind.vars.id }}"><span>No</span><span>Yes</span></label>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="wmw-progressbar">
                <span class="active"></span>
                <span class="active"></span>
                <span class="active"></span>
                <span></span>
                <span></span>
            </div>
        </div>
        <div class="wmw-onboard-bottom">
            <a href="{{ path('expert_registration_step_one') }}" class="wmw-button wmw-button--border">
                <i></i><span>
                {{ 'form.btn.back' | trans }}
            </span><i></i>
            </a>
            {% set next = '<i></i><span>' ~ 'form.btn.next' | trans ~ '</span><i></i>' %}
            {{ form_widget(form.submit, {'attr': {'class': 'wmw-button wmw-button--green'}, 'label': next }) }}
        </div>
    {{ form_end(form) }}
    <div class="wmw-onboard-text col-md-3 col-xl-2">
        <p>
            {{ 'registration.advisor.two.howtotitle' | trans | upper }}
        </p>
        <p>
            {{ 'registration.advisor.two.howtotext' | trans }}
        </p>
    </div>
{% endblock %}
