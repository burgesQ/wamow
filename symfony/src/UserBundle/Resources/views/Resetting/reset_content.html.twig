{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset wmw-onboard col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 col-xl-4 col-xl-offset-4' } }) }}
    <div class="wmw-onboard-body">

        <div class="wmw-onboard-or">
            <h1>{{ 'change_password.submit' | trans | upper }}</h1>
        </div>

        {{ form_errors(form) }}
        {{ form_errors(form.plainPassword) }}

        <div class="wmw-fieldrow row">
            {{ form_widget(form.plainPassword.first, {'attr' : {'class': 'required col-xs-7'}}) }}
            <label class="wmw-label wmw-label--right col-xs-5"
                   for="{{ form.plainPassword.first.vars.id }}">{{ 'form.new_password'|trans }}</label>
        </div>
        {{ form_errors(form.plainPassword.first) }}

        <div class="wmw-fieldrow row">
            {{ form_widget(form.plainPassword.second, {'attr' : {'class': 'required col-xs-7'}}) }}
            <label class="wmw-label wmw-label--right col-xs-5"
                   for="{{ form.plainPassword.second.vars.id }}">{{ 'form.new_password_confirmation'|trans }}</label>
        </div>
        {{ form_errors(form.plainPassword.second) }}

        <div>
            <button type="submit" class="wmw-button">
                <i></i><span>{{ 'resetting.reset.submit' | trans }}</span><i></i>
            </button>
        </div>

    </div>
{{ form_end(form) }}