<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="fos_user_registration_register_seeker" path="/contractor/register" methods="GET POST">
        <default key="_controller">UserBundle:Registration:registerSeeker</default>
    </route>

    <route id="fos_user_registration_register_expert" path="/advisor/register" methods="GET POST">
        <default key="_controller">UserBundle:Registration:registerExpert</default>
    </route>

    <route id="expert_registration_step_one" path="/advisor/register/1" methods="GET POST">
        <default key="_controller">UserBundle:Registration:registerExpert</default>
    </route>

    <route id="expert_registration_step_two" path="/advisor/register/2" methods="GET POST">
        <default key="_controller">UserBundle:Registration:registerExpert</default>
    </route>

    <route id="expert_registration_step_three" path="/advisor/register/3" methods="GET POST">
        <default key="_controller">UserBundle:Registration:registerExpert</default>
    </route>

    <route id="expert_registration_step_four" path="/advisor/register/4" methods="GET POST">
        <default key="_controller">UserBundle:Registration:registerExpert</default>
    </route>

    <route id="expert_registration_step_five" path="/advisor/register/5" methods="GET POST">
        <default key="_controller">UserBundle:Registration:registerExpert</default>
    </route>

    <route id="fos_user_registration_check_email" path="/check-email" methods="GET">
        <default key="_controller">FOSUserBundle:Registration:checkEmail</default>
    </route>

    <route id="fos_user_registration_confirm" path="/confirm/{token}" methods="GET">
        <default key="_controller">FOSUserBundle:Registration:confirm</default>
    </route>

    <route id="fos_user_registration_confirmed" path="/confirmed" methods="GET">
        <default key="_controller">FOSUserBundle:Registration:confirmed</default>
    </route>

</routes>
