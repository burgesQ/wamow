<!doctype html>
<html lang="fr">
<head>

	<meta http-equiv="Content-Type" charset="utf-8">
	<title>{% block title %}Want More Work{% endblock %}</title>

	<meta name="viewport" content="width=device-width, initial-scale=1"/>

	<link rel="apple-touch-icon" sizes="180x180" href="{{asset('bundles/user/fav/apple-touch-icon.png')}}">
	<link rel="icon" type="image/x-icon" href="{{asset('bundles/user/fav/favicon.ico')}}">
	<link rel="icon" type="image/png" href="{{asset('bundles/user/fav/favicon-32x32.png')}}" sizes="32x32">
	<link rel="icon" type="image/png" href="{{asset('bundles/user/fav/favicon-16x16.png')}}" sizes="16x16">
	<link rel="icon" type="image/png" href="{{asset('bundles/user/fav/android-chrome-512x512.png')}}" sizes="512x512">
	<link rel="icon" type="image/png" href="{{asset('bundles/user/fav/android-chrome-192x192.png')}}" sizes="192x192">
	<link rel="manifest" href="{{asset('bundles/user/fav/manifest.json')}}">
	<link rel="mask-icon" href="{{asset('bundles/user/fav/safari-pinned-tab.svg')}}" color="#ffffff">
	<meta name="msapplication-TileColor" content="#ffffff">
	<meta name="msapplication-TileImage" content="{{asset('bundles/user/fav/mstile-144x144.png')}}">
	<meta name="theme-color" content="#ffffff">
    {% block stylesheets %}
        {#<link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">#}
        <!-- HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries -->
        {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
	   <link rel="stylesheet" href="{{asset('bundles/user/css/style.css')}}" />
	   <link rel="stylesheet" href="{{asset('bundles/user/css/print.css')}}" media="print" />
    {% endblock %}
</head>
<body>
    <div class="wmw-wrapper">
        {% block header %}
        <header class="wmw-header wmw-header--ob row">
        	<a href="#" class="wmw-header-logo"><img src="{{asset('bundles/user/images/header-logo.png')}}" alt="WMW" /></a>
        </header>
        {% endblock %}
        <main class="wmw-main row">
            {% include '@User/Profile/profile_header.html.twig' %}
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        {% block footer %}
    	<footer class="wmw-footer row">
    		<a href="#" class="wmw-footer-logo"><img src="{{asset('bundles/user/images/footer-logo.png')}}" alt="WMW" /></a>
    		<nav class="wmw-footer-nav">
    			<a href="#">Mission</a>
    			<a href="#">About</a>
    			<a href="#">Contractor</a>
    			<a href="#">User agreement</a>
    			<a href="#">Legal Notice</a>
    		</nav>
    		<div class="wmw-footer-social">
    			<a href="#"><i class="icon icon--facebook"></i></a>
    			<a href="#"><i class="icon icon--twitter"></i></a>
    			<a href="#"><i class="icon icon--linkedin"></i></a>
    		</div>
    	</footer>
        {% endblock %}

        {% block javascripts %}
            {% javascripts '@TetranzSelect2EntityBundle/Resources/public/js/select2entity.js' %}
                <!-- Include all JavaScripts, compiled by Assetic -->
                <!-- <script src="{{ asset('js/bootstrap.js') }}"></script> -->
                <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
                <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
                <script src="{{ asset('bundles/tetranzselect2entity/js/select2entity.js') }}"></script>
            {% endjavascripts %}
            <script type="text/javascript" src="{{ asset('js/scripts.js')}}"></script>
        {% endblock %}
    </div>
</body>
</html>
